<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <!-- Servlet Mapping for ShipmentServlet -->
    <servlet>
        <servlet-name>ListShipmentServlet</servlet-name>
        <servlet-class>uts.isd.controller.ListShipmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListShipmentServlet</servlet-name>
        <url-pattern>/ListShipmentServlet</url-pattern>
    </servlet-mapping>

  <servlet>
      <servlet-name>DeleteShipmentServlet</servlet-name>
      <servlet-class>uts.isd.controller.DeleteShipmentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>DeleteShipmentServlet</servlet-name>
      <url-pattern>/DeleteShipmentServlet</url-pattern>
  </servlet-mapping>

    
    <servlet>
    <servlet-name>ConnServlet</servlet-name>
        <servlet-class>uts.isd.controller.ConnServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
</web-app>

